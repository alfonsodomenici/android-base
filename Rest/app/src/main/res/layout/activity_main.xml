<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cmdPing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.ghiglienodigital.docandroid.rest.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="153dp"
        android:layout_height="88dp"
        android:layout_marginTop="76dp"
        android:text="Invia Ping"
        android:onClick="onPing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.238" />

    <TextView
        android:id="@+id/lblPing"
        android:layout_width="115dp"
        android:layout_height="58dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="112dp"
        app:layout_constraintLeft_toRightOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="48dp" />

    <Button
        android:id="@+id/cmdInfo"
        android:layout_width="148dp"
        android:layout_height="89dp"
        android:layout_marginLeft="-10dp"
        android:text="Info"
        android:onClick="onInfo"
        app:layout_constraintLeft_toLeftOf="@+id/button"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/lblInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="367dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
